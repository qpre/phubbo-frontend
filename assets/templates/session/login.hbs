<div class="form-wrapper">

  <h1>Login</h1>

  <form id="form-login" class="form" {{action "login" on='submit'}}>

      <div class="label-wrapper">
        <label for="username" class="right">Username :</label>
      </div>
      <div class="input-wrapper">
        {{input value=username id='username'}}
      </div>

      <div class="label-wrapper">
        <label for="password" class="right">Password :</label>
      </div>
      <div class="input-wrapper">
        {{input value=password id='password'}}
      </div>

    <button class="form-button" type="submit">Sign In</button>

  </form>
</div>