<div class='main'>
  <div class='container'>

    <div class='row' style='margin-bottom: 40px;'>
      <div class='col-sm-8'>
        <h3>
          Register
          <small> create your phubo account </small>
        </h3>
      </div>
    </div>

    {{#if errorMessage.length}}
      <div class="alert alert-danger"  style='margin-bottom: 40px;'>
           <div class="container">
               <b>Error: </b>{{errorMessage}}
          </div>
      </div>
    {{/if}}


    <div class='row'>
      <div class='col-sm-offset-1 col-sm-8'>
        <form class="form-horizontal" {{action "register" on='submit'}}>

          <div class="form-group has-{{usernameFieldClass}}">
            <label class="col-sm-2 control-label">Username</label>
            <div class="col-sm-10">
              {{input value=username placeholder="Username" classNames='form-control'}}
            </div>
          </div>

          <div class="form-group has-{{passwordFieldClass}}">
            <label class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
              {{input type='password' value=password placeholder="Password" classNames='form-control'}}
            </div>
          </div>

          <div class="form-group has-{{passwordFieldClass}}">
            <label class="col-sm-2 control-label">Confirm Password</label>
            <div class="col-sm-10">
              {{input type='password' value=confPassword placeholder="Password" classNames='form-control'}}
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-{{submitBtnClass}}">Sign in</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
