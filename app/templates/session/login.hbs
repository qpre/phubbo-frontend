<section class="masthead">
  <div class="text_wrap">
    <h1>Store, Explore, Share</h1>
    <h2>Make the best out of your photos</h2>
    <a class="button large on-image" data-ga-action="Click Get Started" data-ga-category="Homepage Masthead" href="/signup">Get started</a>
  </div>
  <a class="scroll_arrow" href="#more">
    <img src="//assetcdn.500px.org/assets/home/arrrow_down2@2x-c1ef6b59115c590e1977cc28eac1d35c.png" style="opacity: 1;">
  </a>
</section>

<div class='jumbotron'>
  {{#if session.isLoggedIn }}
    <div class='row'>
      <h3>You're already logged in !</h3>
      {{#link-to 'dashboard.index'}}Dashboard{{/link-to}}
    </div>
  {{else}}
    <form class="form-horizontal" {{action "login" on='submit'}}>

      <div  class="form-group">
        <label for='username'>Username :</label>
        {{input value=username id='username'}}
      </div>

      <div  class="form-group">
        <label for='password'>Password :</label>
        {{input type='password' value=password id='password'}}
      </div>

      <button class="btn btn-primary btn-block" type="submit">Sign In</button>
    </form>
  {{/if}}
</div>
