<div class='main'>
  <div class='container'>

    <div class='row' style='margin-bottom: 40px;'>
      <div class='col-sm-8'>
        <h3>
          Login
          <small> enter your credentials </small>
        </h3>
      </div>
    </div>

    <div class='row'>
      <div class='col-sm-offset-1 col-sm-8'>
        {{#if isLoggedIn }}
          <h3>You're already logged in !</h3>
          {{#link-to 'dashboard.index'}}Dashboard{{/link-to}}
        {{else}}
          <form class="form-horizontal" {{action "login" on='submit'}}>

            <div class="form-group has-default">
              <label class="col-sm-2 control-label">Username</label>
              <div class="col-sm-10">
                {{input value=username placeholder="Username" classNames='form-control'}}
              </div>
            </div>

            <div class="form-group has-default">
              <label class="col-sm-2 control-label">Password</label>
              <div class="col-sm-10">
                {{input type='password' value=password placeholder="Password" classNames='form-control'}}
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Sign in</button>
              </div>
            </div>
          </form>
        {{/if}}
      </div>
    </div>

  </div>
</div>
