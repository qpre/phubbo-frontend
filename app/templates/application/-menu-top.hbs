<nav class="header fadein transparent">
  <div class="background"></div>
  <div class="wrapper">
    <div class="inner">
      <a class="logo" href="">Phubo</a>
      <div class="right">
        {{#link-to 'session.login' classNames='signup submit'}}Sign Up{{/link-to}}
        {{#link-to 'session.login' classNames='signup submit'}}Log in{{/link-to}}
      </div>
    </div>
  </div>
</nav>

<div class="modal fade" id="loginFormModal" tabindex="-1" role="dialog" aria-labelledby="loginFormModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form class="form-horizontal" {{action "controllers.session.login" on='submit'}}>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="loginFormModalLabel">Log In</h4>
        </div>

         <div class="modal-body">
          {{ partial 'session/login_form_fields' }}
        </div>

        <div class="modal-footer">
          <button type="button" class="button" data-dismiss="modal">Cancel</button>
          <button class="button" class="button" type='submit'>Log In</button>
        </div>
      </form>
    </div>
  </div>
</div>
